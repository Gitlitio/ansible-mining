[Unit]
Description=Start x11vnc at startup.
After=multi-user.target
OnFailure=status-mail@%n.service

[Service]
Type=simple
ExecStart=/usr/bin/x11vnc -geometry {{ x11vnc_resolution }} -xkb -noxrecord -noxfixes -noxdamage -display {{ x11vnc_display }} -auth "{{ x11vnc_auth }}" -forever -rfbauth "{{ x11vnc_rfb_pass_file }}" -rfbport {{ x11vnc_rfb_port|int }}
Restart=on-failure

[Install]
WantedBy=multi-user.target
