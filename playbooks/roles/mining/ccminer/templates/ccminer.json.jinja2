{
    "algo" : "{{ ccminer_supported_coins[ccminer_coin].alg }}",

    {% if ccminer_gpu_devices|default() -%}
    "devices": "{{ ccminer_gpu_devices|join(',') }}",
    "threads": {{ ccminer_gpu_devices|length }},
    {% endif -%}
    {% if ccminer_intensity != 'auto' -%}
    "intensity": {{ ccminer_intensity|float|tojson }},
    {% endif -%}
    {% if ccminer_cuda_schedule != 'auto' %}
    "cuda-schedule": "{{ ccminer_cuda_schedule }},"
    {% endif -%}

    {% if ccminer_api_bind -%}
    "api-bind": "{{ ccminer_api_bind }}",
    "api-remote": {{ ccminer_api_remote|bool|tojson }},
    {% endif -%}
    "statsavg": 20,

    "quiet" : false,
    "debug" : false,
    "protocol" : false,
    "cpu-priority" : {{ ccminer_cpu_priority|int|tojson }},

    "url": "{{ ccminer_supported_coins[ccminer_coin].pools[ccminer_pool].url }}",
    "user": "{{ ccminer_supported_coins[ccminer_coin].pools[ccminer_pool].user }}",
    "pass" : "{{ ccminer_supported_coins[ccminer_coin].pools[ccminer_pool].pass }}"
}